<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <com.example.a233.staringatghost.gameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/clock"
        android:layout_width="152dp"
        android:layout_height="78dp"
        android:layout_alignBottom="@id/gameView"
        android:layout_alignLeft="@id/gameView"
        android:layout_alignStart="@id/gameView"
        android:background="@drawable/btn_clock"
        android:text="" />

    <Button
        android:id="@+id/anticlock"
        android:layout_width="152dp"
        android:layout_height="78dp"
        android:layout_alignBottom="@id/gameView"
        android:layout_alignEnd="@id/gameView"
        android:layout_alignRight="@id/gameView"
        android:background="@drawable/btn_anticlock"
        android:text="" />

</RelativeLayout>